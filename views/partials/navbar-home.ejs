<link rel="stylesheet" href="/css/navbar.css">

<nav class="navbar navbar-expand-lg navbar-light position-absolute w-100">
    <div class="container-fluid">
        <a class="navbar-brand text-light" href="/"><h3>Preschool Finder</h3></a>

        <nav class="ms-auto justify-content-center float-md-right">
          <% if(!currentUser) { %>
            <div class="d-flex">
              <a class="nav-link nav-btn" href="/user/login">Login</a>
              <a class="nav-link nav-btn" href="/user/register">Register</a>
             
            </div>
            <% } else { %>
              <a href="/school/new"><button class="nav-btn nav-cta position-relative">Add Preschool</button></a>
              <button type="button" class="nav-btn dropdown-toggle account-btn" data-bs-toggle="dropdown" aria-expanded="false">
                  <strong><%= currentUser.username %></strong> <i class="fa-solid fa-circle-user"></i>
                </button>
                  <ul id="dropdown-menu" class="dropdown-menu dropdown-menu-end me-2" aria-labelledby="account-dropdown">
