    // CHECK FOR NO RESULTS & CLEAR FILTERS
    const clearBtn = document.querySelector('#clear-btn');
    clearBtn.addEventListener('click', () => {
        selected = [];
        price.min = '';
        price.max = '';
        maxPrice = '';
        // zoom = map.getZoom();
        // bounds = map.getBounds().toBBoxString();
        getCurrentMapValues()
