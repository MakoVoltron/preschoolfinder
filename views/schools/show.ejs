                  <!-- Owner switch -->
                  <div class="form-check form-switch">
                    <input class="form-check-input verify-switch" type="checkbox" id="owner-verified-[<%= i %>]" name="verified" <%= school.ownership[i].verified ? 'checked' : '' %>>
