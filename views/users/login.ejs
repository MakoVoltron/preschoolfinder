<% layout('layouts/boilerplate')%>

<link href="/css/userForm.css" rel="stylesheet">


<form action="/user/login" method="POST">
    <div class="form-container ms-3 me-3">
        <div class="col-sm-12 col-md-6 m-auto col-lg-5 mt-3 form-card">
            <!-- Header image -->
            <div class="img d-flex justify-content-center align-items-center">
                <div class="text-center text-white p-4">
                    <h3 class="text-uppercase mb-0">Log In</h3>
                    <p class="fw-light mb-1">We need you to be logged in!</p>
                </div>
            </div>

            <!-- Form Content -->
            <div class="p-3">
                <div class="mb-3">
                    <a href="/auth/facebook">
                        <div class="d-grid">
                            <button type="button" class="btn btn-primary"><i class="fa-brands fa-facebook"></i> Facebook</button>
                        </div>
                    </a>
                </div>

                <p class="text-center">or</p>

                <div class="mb-3">
                    <input required class="form-control" type="text" name="username" placeholder="Jane Doe">
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <input required class="form-control" type="password" name="password" placeholder="Password">
                    </div>
                </div>

                <div class="d-grid">
                    <button class="btn btn-success d-grid">Login</button>
                    
                </div>
                <div class="mt-2 text-end">
                    <small>Don't have an account yet? <a href="/user/register"><strong>Register <i class="fa-solid fa-user"></i></strong></a> here!</small>
                </div>
            </div>
        </div>
    </div>
</form>

